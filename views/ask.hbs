<html lang="ru">
<head>
  {{> headSharedStyleScript}}
  <title>Drakosha ask</title>
</head>
<body>
  <header class="header_meet">
    {{> header}}
  </header>

<main>
 <div class="logged">
   <h2 class="logged__subtitle">You logged as {{user}}!</h2>
   <a class="blubtn" href='/ask' type="button" >Log Out</a>
 </div>

  <section class="footer_section">
